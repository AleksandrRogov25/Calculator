<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:background="@color/settings"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_settings"
        android:textSize="@dimen/settings_theme"/>

    <RadioGroup
        android:id="@+id/radioButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radioButtonThemeCalculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_theme_black"
            android:textSize="@dimen/text_settings"
             />


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radioButtonMyThemeGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_theme_grey"
            android:textSize="@dimen/text_settings"
             />
    </RadioGroup>
    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:textSize="@dimen/text_settings"
        />

</LinearLayout>